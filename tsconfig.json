{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@core/*": ["src/core/*"],
      "@icons/*": ["src/icons/*"],
      "@showcase/*": ["src/showcase/*"],
      "@styles/*": ["src/styles/*"],
      "@layouts/*": ["src/layouts/*"],
      "@pages/*": ["src/pages/*"],
    },
  },
  "include": ["src/**/*", "env.d.ts"],
  "exclude": ["node_modules"]
}