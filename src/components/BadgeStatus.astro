---
interface Props {
    href?: string
}

const { href } = Astro.props
---

<a target="_blank" class="status-badge" rel="noopener noreferrer" href={ href } {...Astro.props}>
  <span class="status-badge__dot">
    <span class="status-badge__dot-ping"></span>
    <span class="status-badge__dot-inner"></span>
  </span>
  <slot />
</a>

