---
import '@/components/core/layout/header.scss';
import Items from '@/components/core/ui/Items.astro';
import MenuMovil from '@/components/core/ui/MenuMovil.astro';
import DarkMode from '@/components/core/ui/DarkMode.astro'
---
<header class="header">
  <nav class="header__nav">    
    <article class="header__nav-movil">
      <MenuMovil />
    </article>  

    <ul class="header__nav-menu">
      <Items href="#top">Inicio</Items>
      <Items href="#experiencia">Experiencia</Items>
      <Items href="#proyectos">Proyectos</Items>
      <Items href="#sobre-mi">Sobre Mi</Items>
      <Items href="#tecnologias">Tecnolog√≠as</Items>
      <Items href="#contactos">Contacto</Items>
      
      <DarkMode />  
    </ul>
  </nav>
</header>

<script is="global">
document.addEventListener('DOMContentLoaded', () => {
    const checkbox = document.querySelector('.check-icon');
    const menu = document.querySelector('.header__nav-menu');

    if (checkbox && menu) {
      
      checkbox.addEventListener('change', () => {
        if (checkbox.checked) {
          menu.classList.add('active');
        } else {
          menu.classList.remove('active');
        }
      });

      menu.addEventListener('click', (event) => {
        if (event.target.tagName === 'A') {
          checkbox.checked = false;
          menu.classList.remove('active');
        }
      });
    }
});
</script>