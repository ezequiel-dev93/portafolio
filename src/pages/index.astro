---
import Layout from '@layouts/Layout.astro';
import Header from '@components/Header.astro';
import SectionContenedor from "@components/SectionContenedor.astro";
import CardProfile from '@/sections/profile/card-profile/CardProfile.astro';
import Experiencia from '@/sections/experience/Experience.astro';
import Briefcase from "@/icons/Briefcase.astro"
import CardProject from '@/sections/projects/CardProject.astro';
import Coder from '@/icons/Coder.astro';
import About from '@/sections/profile//about/About.astro';
import Skills from '@/sections/skills/Skills.astro';
//import ServicesCard from '@components/showcase/services/ServicesCard.astro';
import Contact from '@/sections/contact/Contact.astro';
import SectionFooter from '@components/SectionFooter.astro';
import WaveFooter from '@/icons/WaveFooter.astro';
---

<Layout title='Ezequiel Suarez | Desarrollador Front-End y Programador' 
description='Front-End Developer con 2años de experiencia. Formación autodicacta continua. Enfoque en accesibilidad, desarrollo modular y escalable. Estudiante de Ingeniería en Sistemas de Información.'>
	<Header />
	
	<main>
		<SectionContenedor class="card" id="top">
			<CardProfile />  
		</SectionContenedor>

		<SectionContenedor class="experience" id="experiencia">
			<article class="experience__title">
				<Briefcase />
				<h2 class="experience__title-h2">Experiencia</h2>				
			</article>
			 
			<Experiencia />
		</SectionContenedor>
		
		<SectionContenedor class="projects" id="proyectos">
			<article class="projects__title">
				<Coder/>
				<h2 class="projects__title-h2">Proyectos</h2>
			</article>
			
			<CardProject />
		</SectionContenedor>

		<SectionContenedor class="about" id="sobre-mi">
			<About />
		</SectionContenedor>

		<SectionContenedor class="skills" id="tecnologias">
			<Skills />
		</SectionContenedor>
		
		<!-- 
			<SectionContenedor class="services" id="services">
				<ServicesCard />
			</SectionContenedor>
		-->
	
		<SectionContenedor class="contactos" id="contactos">
			<Contact />
		</SectionContenedor>
	</main>

	<footer class="footer">
		<article class="footer__wave">
			<WaveFooter class="footer__wave-svg"/>
		</article>
		
		<SectionFooter />
	</footer>
</Layout>
 